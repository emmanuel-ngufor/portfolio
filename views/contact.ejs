<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Me</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body tabindex="-1">
    <!-- Include navbar -->
    <%- include('partials/navbar', { page: '/contact' }) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Contact</h1>
            <p class="py-6">GET IN TOUCH WITH ME</p>
          </div>
        </div>
      </div>

      <!-- Alerts for success or error messages -->
      <% if (success) { %>
        <div class="alert alert-success my-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= success %></span>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="alert alert-error my-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= error %></span>
        </div>
      <% } %>

      <!-- Contact Form -->
      <div>
        <form method="post" action="send-email">
          <div class="form-control">
            <label class="label" for="name"><span class="label-text">Name</span></label>
            <input type="text" id="name" name="name" placeholder="Your name" required class="input input-bordered" />

            <label class="label" for="email"><span class="label-text">Email</span></label>
            <input type="email" id="email" name="email" placeholder="Your email" required class="input input-bordered" />

            <label class="label" for="phone"><span class="label-text">Phone</span></label>
            <input type="text" id="phone" name="phone" placeholder="Phone number" required class="input input-bordered" />

            <label class="label" for="reason"><span class="label-text">Reason</span></label>
            <input type="text" id="reason" name="reason" placeholder="Reason for contact" required class="input input-bordered" />
          </div>

          <div class="form-control">
            <label class="label" for="message"><span class="label-text">Message</span></label>
            <textarea id="message" name="message" placeholder="Enter your message" rows="5" required class="textarea input-bordered"></textarea>
          </div>

          <div class="flex items-center justify-between">
            <button href="#" onclick="history.back(); return false;" class="btn btn-secondary mt-4 mr-4">Back</button>
            <button type="submit" class="btn btn-primary mr-4">Send</button>
          </div>
        </form>
        
      </div>
    </div>

    <!-- Include footer -->
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
